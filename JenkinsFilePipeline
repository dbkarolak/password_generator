pipeline {
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }

    environment {
        FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }

    stages {
        stage('Building') {
            steps {
                script {
                    // Set npm cache directory to a location within the workspace
                    sh """
                        mkdir -p ${env.WORKSPACE}/.npm
                        npm config set cache ${env.WORKSPACE}/.npm --global
                    """
                    // Install firebase-tools with npm without global flag to avoid permission issues
                    sh 'npm install firebase-tools'
                }
            }
        }

        stage('Testing') {
            steps {
                echo 'This is testing'
            }
        }

        stage('Staging') {
            steps {
                sh './node_modules/.bin/firebase deploy -P staging-replica-c4415 --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }

        stage('Production') {
            steps {
                sh './node_modules/.bin/firebase deploy -P production-replica-bc191 --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
    }
}
