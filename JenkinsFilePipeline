pipeline {
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }

    environment {
        FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }

    stages {
        stage('Building') {
            steps {
                script {
                    // Usar um diret√≥rio dentro do workspace do Jenkins para npm cache
                    sh """
                        mkdir -p ${env.WORKSPACE}/.npm
                        npm config set cache ${env.WORKSPACE}/.npm --global
                    """
                    // Instalar o firebase-tools
                    sh 'npm install -g firebase-tools'
                }
            }
        }

        stage('Testing') {
            steps {
                echo 'This is testing'
            }
        }

        stage('Staging') {
            steps {
                sh 'firebase deploy -P staging-replica-c4415 --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }

        stage('Production') {
            steps {
                sh 'firebase deploy -P production-replica-bc191 --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
    }
}
